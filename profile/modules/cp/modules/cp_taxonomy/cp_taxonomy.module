/**
 * Implements hook_entity_prepare_view().
 */
function cp_taxonomy_entity_prepare_view($entity_type_id, array $entities, array $displays, $view_mode) {
  /** @var \Drupal\vsite\Plugin\VsiteContextManager $vsite_context_manager */
  $vsite_context_manager = Drupal::service('vsite.context_manager');
  $group = $vsite_context_manager->getActiveVsite();
  if (empty($group)) {
    return;
  }
  /** @var \Drupal\Core\Entity\ContentEntityInterface $entity */
  foreach ($entities as $entity) {
    if (!$entity->hasField('field_taxonomy_terms')) {
      continue;
    }
    $field_values = $entity->get('field_taxonomy_terms')->getValue();
    if (empty($field_values)) {
      continue;
    }
    $entity->addCacheTags(['entity-with-taxonomy-terms:' . $group->id()]);
  }
}

/**
 * Implements hook_views_post_build().
 */
function cp_taxonomy_views_post_build(ViewExecutable $view) {
  /** @var \Drupal\vsite\Plugin\VsiteContextManager $vsite_context_manager */
  $vsite_context_manager = Drupal::service('vsite.context_manager');
  $group = $vsite_context_manager->getActiveVsite();
  if (empty($group)) {
    return;
  }
  // Tag all publications views, can't find better working solution.
  if ($view->id() == 'publications') {
    $view->storage->addCacheTags(['entity-with-taxonomy-terms:' . $group->id()]);
  }
}

/**
 * Implements hook_ENTITY_TYPE_access().
 */
function cp_taxonomy_taxonomy_vocabulary_access(EntityInterface $entity, $operation, AccountInterface $account) {

  /** @var \Drupal\vsite\Plugin\VsiteContextManager $vsite_manager */
  $vsite_manager = \Drupal::service('vsite.context_manager');
  /** @var \Drupal\group\Entity\GroupInterface $active_vsite */
  $active_vsite = $vsite_manager->getActiveVsite();

  // If in vsite context then only alter access.
  if ($active_vsite) {
    // If no permission don't show operations buttons.
    if (!$active_vsite->hasPermission('manage taxonomy', $account)) {
      return AccessResult::forbidden();
    }
    return AccessResult::allowed();
  }
  // If no active vsite no opinion.
  return AccessResult::neutral();
}

/**
 * Implements hook_ENTITY_TYPE_access().
 */
function cp_taxonomy_taxonomy_term_access(EntityInterface $entity, $operation, AccountInterface $account) {

  /** @var \Drupal\vsite\Plugin\VsiteContextManager $vsite_manager */
  $vsite_manager = \Drupal::service('vsite.context_manager');
  /** @var \Drupal\group\Entity\GroupInterface $active_vsite */
  $active_vsite = $vsite_manager->getActiveVsite();

  $plugin_id = "group_entity:{$entity->getEntityTypeId()}";

  // If in vsite context then only alter access.
  if ($active_vsite) {
    // If no permission don't show operations buttons and other form buttons.
    if (!$active_vsite->hasPermission("$operation any $plugin_id entity", $account)) {
      return AccessResult::forbidden();
    }
    return AccessResult::allowed();
  }
  // If no active vsite no opinion.
  return AccessResult::neutral();
}
