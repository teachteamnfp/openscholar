/**
 * Save vocabulary settings submit handler.
 *
 * @param array $form
 *   The form.
 * @param \Drupal\Core\Form\FormStateInterface $form_state
 *   The form state.
 */
function cp_taxonomy_form_save_vocabulary_settings_submit(array &$form, FormStateInterface &$form_state) {
  $vid = $form_state->getValue('vid');
  $settings['allowed_entity_types'] = $form_state->getValue('allowed_entity_types');
  $settings['widget_type'] = $form_state->getValue('widget_type');
  Drupal::service('cp.taxonomy.helper')->saveVocabularySettings($vid, $settings);
}

